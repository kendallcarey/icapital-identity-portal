<h1>Create your account</h1>

<%= form_with model: @user, url: registrations_path, local: true do |f| %>
  <% if @user.errors.any? %>
    <div class="errors">
      <ul>
        <% @user.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :email_address, "Email" %><br>
    <%= f.email_field :email_address, autofocus: true, required: true %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password, required: true %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, required: true %>
  </div>

  <div>
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<p>Already have an account? <%= link_to "Log in", new_session_path %></p>